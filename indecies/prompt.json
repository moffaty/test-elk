                    ],
                    "char_filter": ["e_char_filter"],
                    "tokenizer": "ngram_tokenizer"
                },
                "ru_en_strict": {
                    "filter": [
                        "lowercase",
                        "english_stemmer",
                        "english_possessive_stemmer",
                        "russian_stemmer"
                    ],
                    "char_filter": ["e_char_filter"],
                    "tokenizer": "edge_tokenizer"
                }
            },

            "tokenizer": {
                "ngram_tokenizer": {
                    "type": "ngram",
                    "min_gram": 3,
                    "max_gram": 3,
                    "token_chars": ["letter", "digit"]
                },
                "edge_tokenizer": {
                    "type": "edge_ngram",
                    "min_gram": 3,
                    "max_gram": 10,
                    "token_chars": ["letter", "digit"]
                }
            },
            "char_filter": {
                "e_char_filter": {
                    "type": "mapping",
                    "mappings": ["ё => е", "Ё => Е"]
                }
            }
        }
    },
    "mappings": {
        "dynamic": "strict",
        "properties": {
            "id": { "type": "keyword" },
            "title": { "type": "text", "analyzer": "ru_en_strict" },
            "description": { "type": "text", "analyzer": "ru_en" },
            "template": { "type": "text", "analyzer": "ru_en" },
            "is_public": { "type": "boolean" }
